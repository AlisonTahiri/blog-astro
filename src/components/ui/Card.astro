---
type Props = {
	title: string;
	slug: string;
	description: string;
	imgUrl: string;
	imgHeight: string;
	imgWidth: string;
};

const { description, imgHeight, imgUrl, imgWidth, slug, title }: Props =
	Astro.props;
---

<div class="max-w-lg p-4 shadow-md bg-bgk2">
	<div class="flex justify-between pb-4 border-bottom">
		<div class="flex items-center">
			<div class="mb-0 capitalize dark:text-gray-100">Category</div>
		</div>
		<a rel="noopener noreferrer" href={`/blog/${slug}`}>See All</a>
	</div>
	<div class="space-y-4">
		<div class="space-y-2">
			<img
				src={imgUrl}
				alt=""
				class="block object-cover object-center w-full rounded-md h-72 dark:bg-gray-500"
			/>
			<div class="flex items-center text-xs">
				<span>6 min ago</span>
			</div>
		</div>
		<div class="space-y-2">
			<a rel="noopener noreferrer" href="#" class="block">
				<h3 class="text-xl font-semibold dark:text-violet-400">
					{title}
				</h3>
			</a>
			<p class="leading-snug dark:text-gray-400">
				{description}
			</p>
		</div>
	</div>
</div>
